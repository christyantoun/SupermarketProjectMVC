@model SupermarketProjectMVC.Models.Item
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <table class="zoom" style="margin-top:18px">
        <tr>
            <td style="width: 250px;
        height: 250px;
        display: block;
        margin-left: auto;
        margin-right: auto;
        align-content:center;
        width: 50%;">
                <img alt="@Model.Title"
                     src="~/Images/@Model.ItemArtUrl" style="width:auto ; height:250px; object-fit: fill;" />
            </td>
        </tr>
        <tr style="align-content:center">
            <td><b>Product Name:</b></td>
            <td>@Model.Title</td>
        </tr>
        <tr style="align-content:center">
            <td><b>Product Price:</b></td>
            <td>@Model.Price</td>
        </tr>

    </table>

