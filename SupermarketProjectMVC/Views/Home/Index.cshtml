@model List<SupermarketProjectMVC.Models.Item>
@{
    ViewData["Title"] = "Index";
}

<div style="height:99vh;width:100%;  background:url('Images/shop.jpg') no-repeat;  background-size: cover;">




    <div class="text-center">
        <h1 class="display-4" style="margin-top:0; padding-top: 4%;margin-bottom:0 !important;color:white; font-size:60px">Welcome to Local Shop</h1>
        <a href="#myCarousel"> <h3>Discover Our Products  </h3></a>
    </div>
</div>

<div style="display:flex; flex-direction:column; height:auto; width:100%">
    <div style="display:flex ;flex-direction:row ;width:100%; margin:0 auto; flex-wrap:nowrap; align-content:stretch">
        <asp:Content ID="Content3" ContentPlaceHolderID="ContentPlaceHolder1" runat="server">
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

            <style>

                body {
                }


                .vertical .carousel-inner {
                    height: 100%;
                }

                .carousel.vertical .item {
                    -webkit-transition: 0.6s ease-in-out right;
                    -moz-transition: 0.6s ease-in-out right;
                    -o-transition: 0.6s ease-in-out right;
                    transition: 0.6s ease-in-out right;
                    top: 0;
                }


                .carousel.vertical .active {
                    right: 0;
                }

                .carousel.vertical .next {
                    right: 100%;
                }

                .carousel.vertical .prev {
                    right: -100%;
                }

                    .carousel.vertical .next.left,
                    .carousel.vertical .prev.right {
                        right: 0;
                    }

                .carousel.vertical .active.left {
                    right: -100%;
                }

                .carousel.vertical .active.right {
                    right: 100%;
                }
            </style>


            <div id="myCarousel" class="carousel slide vertical" data-ride="carousel" style="width:100%; height: 250px ">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>
                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="~/Images/ban1.png" alt="" style="width:100%; height:250px; object-fit:cover;">
                    </div>

                    <div class="item">
                        <img src="~/Images/ban2.png" alt="" style=" width:100% ; height:250px; object-fit:cover;">
                    </div>

                    <div class="item">
                        <img src="~/Images/ban3.png" alt="" style="width:100% ; height:250px; object-fit:cover;">
                    </div>
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" data-target="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" data-target="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </asp:Content>
        <div>
            @{
                ;
            }
        </div>
    </div>
    <div class="wrapper">
        @foreach (var item in Model)
        {
        <div style="color:black">
            <a href="@Url.Action("Details" , "Store", new { id = item.ItemId })">
                @Html.Partial("_SingleItem", item)
            </a>
            @*@Html.ActionLink(item.Title, "Details", new { id = item.ItemId })*@
        </div>
        }
    </div>

</div>
